@model FrontEnd.Models.ViewModels.ActaDecomisoViewModel
@{ ViewBag.Title = "Editar Acta de Decomiso"; }


<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div style="text-align:center;">
        <h1 class="display-5">@ViewBag.Title</h1>
    </div>
    <hr />
    @using (Html.BeginForm("Editar", "ActaDecomiso", FormMethod.Post))
    {


        @Html.HiddenFor(d => d.IdActaDecomiso)
        @Html.HiddenFor(d => d.NumeroFolio)
        <div class="row mb-4">
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.OficialActuante)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.OficialActuante, "", new { @class = "form-control", @id = "idActuante", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idActuante" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.OficialActuante, null, new { @class = "red" })
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.OficialAcompanante)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.OficialAcompanante, "", new { @class = "form-control", @id = "idAcompanante", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idAcompanante" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.OficialAcompanante, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Supervisor)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.Supervisor, "", new { @class = "form-control", @id = "idSupervisor", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idSupervisor" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.Supervisor, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Fecha)
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Hora)
                @Html.EditorFor(d => d.Hora, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Hora, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.IdDecomisado)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.IdDecomisado, "", new { @class = "form-control", @id = "idDecomisado", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idDecomisado" data-bs-toggle="modal" data-bs-target="#modalBusquedaPersona">Buscar</a>
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.EstadoCivil)
                @Html.DropDownListFor(d => d.EstadoCivil, Model.EstadosCivil, "--Seleccione--", new { @class = " form-select" })
                @Html.ValidationMessageFor(d => d.EstadoCivil, null, new { @class = "red" })
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Estado)
                @Html.DropDownListFor(d => d.Estado, Model.Estados, new { @class = "form-select" })
                @Html.ValidationMessageFor(d => d.Estado, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-8">
                @Html.LabelFor(d => d.Inventario)
                @Html.TextAreaFor(d => d.Inventario, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.Inventario, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.LugarDelProcedimiento)
                @Html.TextAreaFor(d => d.LugarDelProcedimiento, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.LugarDelProcedimiento, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.Observaciones)
                @Html.TextAreaFor(d => d.Observaciones, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.Observaciones, null, new { @class = "red" })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group col-md-12">
                <div style="text-align:center;">
                    <a class="btn btn-secondary" href="~/ActaDecomiso/Index">Cancelar</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#show">Guardar</a>
                </div>

            </div>
        </div>

        <div class="modal fade" id="show" tabindex="-1" aria-labelledby="showLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="showLabel">Editar un Acta de Decomiso</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea guardar los cambios en el acta?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave" data-bs-dismiss="modal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="modal fade" id="modalBusquedaPolicia" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPoliciaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPoliciaLabel">Buscar Policía</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPolicia" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPoliciasBuscar", "ActaDecomiso", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaPersona" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPersonaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPersonaLabel">Buscar Persona</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPersona" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPersonasBuscar", "ActaDecomiso", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function reply_click(clicked_id) {
        var aux = document.getElementsByName("agregarPolicia")[0].getAttribute("id");
        if (aux === "idActuante") {
            var elem = document.getElementById("idActuante");
        }
        if (aux === "idAcompanante") {
            var elem = document.getElementById("idAcompanante");
        }
        if (aux === "idSupervisor") {
            var elem = document.getElementById("idSupervisor");
        }
        elem.value = clicked_id;
    }
    function reply_click4(clicked_id4) {
        var aux = document.getElementsByName("agregarPersona")[0].getAttribute("id");

        if (aux === "idDecomisado") {
            var elem = document.getElementById("idDecomisado");
        }
        elem.value = clicked_id4;
    }
</script>
