@model FrontEnd.Models.ViewModels.ActaDecomisoViewModel
@{ ViewBag.Title = "Agregar Información Acta de Decomiso"; }

<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div class="row">
        <div class="col-md-12">
            <div style="text-align:center;">
                <h2 class="display-4" style="text-align:center;">@ViewBag.Title</h2>
            </div>

        </div>
    </div>
    <hr />
    @using (Html.BeginForm("Nuevo", "ActaDecomiso", FormMethod.Post))
    {
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.OficialActuante)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.OficialActuante, "", new { @class = "form-control", @id = "idActuante", @readonly = "readonly" })
                    <div class="input-group-append ">
                        <a class="btn btn-primary" data-book-id="idActuante" data-toggle="modal" data-target="#modalBusqueda">Buscar</a>
                      
                    </div>
                </div>
                @Html.ValidationMessageFor(d => d.OficialActuante, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.OficialAcompanante)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.OficialAcompanante, "", new { @class = "form-control", @id = "idAcompanante", @readonly = "readonly" })
                    <div class="input-group-append ">
                        <a class="btn btn-primary" data-book-id="idAcompanante" data-toggle="modal" data-target="#modalBusqueda">Buscar</a>
                       
                    </div>
                </div>
                @Html.ValidationMessageFor(d => d.OficialAcompanante, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Supervisor)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.Supervisor, "", new { @class = "form-control", @id = "idSupervisor", @readonly = "readonly" })
                    <div class="input-group-append ">
                        <a class="btn btn-primary" data-book-id="idSupervisor" data-toggle="modal" data-target="#modalBusqueda">Buscar</a>
                        
                    </div>
                </div>
                @Html.ValidationMessageFor(d => d.Supervisor, null, new { @class = "red" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Fecha)
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Hora)
                @Html.EditorFor(d => d.Hora, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Hora, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(d => d.CedulaDecomisado)
                @Html.TextBoxFor(d => d.CedulaDecomisado, "", new { @class = "form-control", onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.CedulaDecomisado, null, new { @class = "red" })

            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(d => d.NombreDecomisado)
                @Html.TextBoxFor(d => d.NombreDecomisado, "", new { @class = "form-control", onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetras(event)", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.NombreDecomisado, null, new { @class = "red" })
            </div>


        </div>
        <div class="form-row">

            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.EstadoCivil)
                @Html.DropDownListFor(d => d.EstadoCivil, Model.EstadosCivil, "--Seleccione--", new { @class = "myselect form-control" })
                @Html.ValidationMessageFor(d => d.EstadoCivil, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-3">
                @Html.LabelFor(d => d.TelefonoDecomisado)
                @Html.TextBoxFor(d => d.TelefonoDecomisado, "", new { @class = "inputphone form-control", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.TelefonoDecomisado, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(d => d.DireccionDecomisado)
                @Html.TextAreaFor(d => d.DireccionDecomisado, new { @class = "form-control", onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumerossimbolos(event)", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.DireccionDecomisado, null, new { @class = "red" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.LabelFor(d => d.Inventario)
                @Html.TextAreaFor(d => d.Inventario, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.Inventario, null, new { @class = "red" })
            </div>
        </div>
        <div class="form-row">


            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.LugarDelProcedimiento)
                @Html.TextAreaFor(d => d.LugarDelProcedimiento, new { @class = "form-control", autocomplete = "new-password" , onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.LugarDelProcedimiento, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.Observaciones)
                @Html.TextAreaFor(d => d.Observaciones, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.Observaciones, null, new { @class = "red" })
            </div>
        </div>

       <br />
        <div class="form-row">
            <div class="form-group col-md-12">
                <div style="text-align:center;">

                    <a class="btn btn-secondary" href="~/ActaDecomiso/Index">Cancelar</a>
                    <script>
                        $('#btnSave').click(function () {
                            $('#show').modal('hide');
                        });

                    </script>
                    <input value="Guardar" class="btn btn-primary" type="button" id="hGuardar" data-toggle="modal" data-target="#show" />
                </div>

            </div>
        </div>

        <div class="modal" id="show">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Agregar un Acta de Decomiso</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea guardar una nueva acta?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave">Guardar</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" id="quitaPolicia">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Quitar un policía de un Acta</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea quitar un policía de una acta?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" id="Cancel" data-dismiss="modal">Cancelar</button>
                        <a name="quitarPolicia" class="btn btn-danger" onclick="reply_click3(this.id)" data-dismiss="modal">Quitar </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="modalBusqueda" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar Policía</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <p hidden name="agregarPolicia" id="" />

                <div class="modal-body">
                    @{ Html.RenderAction("ListaPoliciasBuscar", "ActaDecomiso", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>

</div>

            <script>

                function reply_click(clicked_id) {
                    var aux = document.getElementsByName("agregarPolicia")[0].getAttribute("id");
                    if (aux === "idActuante") {
                        var elem = document.getElementById("idActuante");
                    }
                    if (aux === "idAcompanante") {
                        var elem = document.getElementById("idAcompanante");
                    }
                    if (aux === "idSupervisor") {
                        var elem = document.getElementById("idSupervisor");
                    }
                    elem.value = clicked_id;
                    $('#modalBusqueda').modal('hide');
                }


                function reply_click2(clicked_id2) {
                    var elem2 = document.getElementByName("quitaPolicia");
                    elem2.value = clicked_id2;
                    $('#showQu').modal('hide');
                }

                function reply_click3(clicked_id3) {
                    document.getElementById(clicked_id3).value = '';
                }
            </script>
