@model FrontEnd.Models.ViewModels.ActaDeDestruccionDePerecederosViewModel

@{ ViewBag.Title = "Detalle de Acta de Destrucción de Perecederos"; }


<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div class="row">
        <div class="col-md-12">
            <div style="text-align:center;">
                <h2 class="display-4">@ViewBag.Title </h2>
            </div>
        </div>
    </div>

    <hr />
    <div class="card col-md-12">
        <div class="card-header">
            <h2> @Html.DisplayTextFor(d => d.NumeroFolio)</h2>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.VistaPoliciaEncargado)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaPoliciaEncargado)</text>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.VistaTipoTestigo)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaTipoTestigo)</text>
                </div>
            </li>
            @if (Model.VistaTestigo != null)
            {
                <li class="list-group-item">
                    <div class="row">
                        <b class="col-sm-4"> @Html.LabelFor(d => d.VistaTestigo)</b>
                        <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaTestigo)</text>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <b class="col-sm-4"> @Html.LabelFor(d => d.VistaIdTestigo)</b>
                        <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaIdTestigo)</text>
                    </div>
                </li>
            }
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.VistaPoliciaSupervisor)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaPoliciaSupervisor)</text>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.Fecha)</b>
                    <text class="col-sm-8">
                        @{ var fecha = Model.Fecha.ToShortDateString(); }
                        @Html.DisplayTextFor(d => fecha)
                    </text>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.Hora)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.Hora.TimeOfDay)</text>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.VistaTipoActaD)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.VistaTipoActaD)</text>
                </div>
            </li>
         
            @if (Model.ConsecutivoActaDecomiso != null)
            {
                <li class="list-group-item">
                    <div class="row">
                        <b class="col-sm-4"> @Html.LabelFor(d => d.ConsecutivoActaDecomiso)</b>
                        <a class="col-sm-8" href="~/ActaDecomiso/Detalle/@Model.IdActaDecomiso" target="_blank">
                            @Html.DisplayTextFor(d => d.ConsecutivoActaDecomiso)
                        </a>
                    </div>
                </li>
            }
            else
            {
                <li class="list-group-item">
                    <div class="row">
                        <b class="col-sm-4"> @Html.LabelFor(d => d.ConsecutivoActaHallazgo)</b>

                        <a class="col-sm-8" href="~/ActaHallazgo/Detalle/@Model.IdActaHallazgo" target="_blank">
                            @Html.DisplayTextFor(d => d.ConsecutivoActaHallazgo)
                        </a>

                    </div>
                </li>
            }

            <li class="list-group-item">
                <div class="row">
                    <b class="col-sm-4"> @Html.LabelFor(d => d.InventarioDestruido)</b>
                    <text class="col-sm-8">@Html.DisplayTextFor(d => d.InventarioDestruido)</text>
                </div>
            </li>
        </ul>
        <div class="card-footer">
            <div class="row">
                <div class="col-sm-2">
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-12">
            <a href="~/ActaDeDestruccionDePerecederos/Index/" class="btn btn-outline-secondary">Regresar</a>
            @if (Session["Rol"].ToString() == "2" || Session["Rol"].ToString() == "3" || Session["Rol"].ToString() == "5")
            {
                <div style="text-align:center;">
                    <a class="btn btn-primary" href="~/ActaDeDestruccionDePerecederos/Editar/@Model.IdActaDeDestruccionDePerecederos">Editar</a>
                    <a class="btn btn-secondary" href="~/Auditoria/ListadoAuditoria/@Model.IdActaDeDestruccionDePerecederos" target="_blank">Ver Auditorías</a>
                    <a href="~/ActaDeDestruccionDePerecederos/CreatePDF/@Model.IdActaDeDestruccionDePerecederos" class="btn btn-outline-secondary">Imprimir</a>
                </div>}
        </div>

    </div>


</div>