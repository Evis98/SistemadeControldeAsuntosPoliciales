@{ ViewBag.Title = "Actas de Destrucción de Perecederos"; }
<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; margin-bottom: 20px; word-wrap: break-word;">
    <div style="text-align:center;">
        <h1 class="display-4">@ViewBag.Title</h1>
    </div>

    <hr />
    @using (Html.BeginForm("Index", "ActaDeDestruccionDePerecederos", FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-3">
                <select class="form-select" name="filtroSeleccionado" id="filtroSeleccionado" onclick="ocultarFechaActa()">
                    <option selected>Número de Folio</option>
                    <option>Nombre Policía Encargado</option>
                    <option>Fecha</option>
                </select>
            </div>

            <div class="col-sm-3">
                <input class="form-control" name="busqueda" type="text" id="busqueda" maxlength="151" style="text-transform:uppercase" onkeydown="return /[0-9A-Z -ÁáéÉíÍóÓúÚ]/i.test(event.key)" />
                <input class="form-control" name="busquedaFechaInicioH" type="date" id="busquedaFechaInicioH" style="display:none" />
                <label id="textFechaInicioH" style="display:none">Fecha de inicio</label>
            </div>


            <div class="col-sm-3">
                <input class="form-control" name="busquedaFechaFinalH" type="date" id="busquedaFechaFinalH" style="display:none" />
                <label id="textFechaFinalH" style="display:none">Fecha final</label>
                <span id="errorFechaH"></span>
            </div>

            <div class="col-sm-1">
                <button class="btn btn-primary">Buscar</button>
            </div>

            <div class="col-sm-1">
                <a href="~/ActaDeDestruccionDePerecederos/Nuevo" class="btn btn-success">Agregar</a>
            </div>

        </div>}
    <hr />



    <table class="table table-bordered center table-sm" id="idtablaDestruccion">
        <thead class="table-dark">
            <tr>
                <th scope="col">Número de Folio</th>
                <th scope="col">Policía Encargado </th>
                <th scope="col">Fecha</th>
                <th scope="col">Acta</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <th scope="row">@oElemento.NumeroFolio</th>
                    <td>@oElemento.VistaPoliciaEncargado</td>
                    <td>@oElemento.Fecha.ToShortDateString()</td>
                    <td>@oElemento.VistaTipoActaD</td>
                    <td>
                        <div style="text-align:center;">
                            <a class="btn btn-sm btn-outline-info" href="~/ActaDeDestruccionDePerecederos/Detalle/@oElemento.IdActaDeDestruccionDePerecederos">Ver Detalles</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#idtablaDestruccion').DataTable({
            searching: false,
            lengthMenu: [[6], [6]],
            lengthChange: false,
            language: {
                lengthMenu: "Mostrar _MENU_ entradas",
                info: "Se muestran de _START_ a _END_ de _TOTAL_ entradas totales",
                infoEmpty: "Se muestran de 0 a 0 de 0 entradas totales",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }

        });
    });


</script>