@model FrontEnd.Models.ViewModels.ActaHallazgoViewModel

@{ ViewBag.Title = "Detalle de Acta de Hallazgo"; }


<div class="container bg-light text-dark border" style="height:80vh;">
    <div class="row">
        <div class="col-md-12">
            <div style="text-align:center;">
                <h2 class="display-4">@ViewBag.Title </h2>
            </div>
        </div>
    </div>

    <hr />

    <dl class="row">

        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.NumeroFolio)
        </dt>
        <dd id="req" class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.NumeroFolio)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Encargado)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Encargado)
        </dd>
        <dt class="col-sm-4">
            @Html.LabelFor(d => d.Testigo)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Testigo)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Supervisor)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Supervisor)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.VistaDistrito)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.VistaDistrito)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Fecha)
        </dt>
        <dd class="col-sm-8 ">
            @{ var fecha = Model.Fecha.ToShortDateString(); }
            @Html.DisplayTextFor(d => fecha)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Hora)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Hora.TimeOfDay)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Avenida)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Avenida)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Calle)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Calle)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.OtrasSenas)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.OtrasSenas)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Inventario)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Inventario)
        </dd>
        <dt class="col-sm-4 ">
            @Html.LabelFor(d => d.Observaciones)
        </dt>
        <dd class="col-sm-8 ">
            @Html.DisplayTextFor(d => d.Observaciones)
        </dd>

    </dl>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <a href="~/ActaHallazgo/Index/" class="btn btn-outline-secondary">Regresar</a>

            <div style="text-align:center;">
                <a class="btn btn-primary" href="~/ActaHallazgo/Editar/@Model.IdActaHallazgo">Editar</a>

            </div>
        </div>

    </div>


    </div>
