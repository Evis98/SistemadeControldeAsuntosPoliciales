    <div class="container body-content">
        @RenderBody()

        <footer class="fixed-bottom" style="background-color:#00277B;">
            <p style="color:white; text-align:center">&copy; @DateTime.Now.Year - Municipalidad de Alajuela</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jqueryval")
