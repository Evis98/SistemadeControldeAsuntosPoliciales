@model FrontEnd.Models.ViewModels.ActaDeObservacionPolicialViewModel
@{ ViewBag.Title = "Agregar Información Acta de Observación Policial"; }

<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div style="text-align:center;">
        <h1 class="display-5">@ViewBag.Title</h1>
    </div>
    <hr />
    @using (Html.BeginForm("Nuevo", "ActaDeObservacionPolicial", FormMethod.Post))
    {
        <div class="row mb-4">
            @if (Session["Rol"].ToString() == "1" || Session["Rol"].ToString() == "2" || Session["Rol"].ToString() == "3")
            {
                <div class="form-group col-md-4">
                    @Html.LabelFor(d => d.OficialActuante)
                    <div class="input-group">
                        @Html.TextBoxFor(d => d.OficialActuante, "", new { @class = "form-control", @Value = @Session["cedula"].ToString(), @id = "idActuante", @readonly = "readonly" })
                        <div class="input-group-append ">
                            <a class="btn btn-primary" data-book-id="idActuante" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(d => d.OficialActuante, null, new { @class = "red" })
                </div>
            }
            else
            {
                <div class="form-group col-md-4">
                    @Html.LabelFor(d => d.OficialActuante)
                    <div class="input-group">
                        @Html.TextBoxFor(d => d.OficialActuante, "", new { @class = "form-control", @id = "idActuante", @readonly = "readonly" })
                        <a class="btn btn-primary" data-book-id="idActuante" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                    </div>
                    @Html.ValidationMessageFor(d => d.OficialActuante, null, new { @class = "red" })
                </div>
            }
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.OficialAcompanante)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.OficialAcompanante, "", new { @class = "form-control", @id = "idAcompanante", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idAcompanante" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.OficialAcompanante, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Distrito)
                @Html.DropDownListFor(d => d.Distrito, Model.Distritos, "--Seleccione--", new { @class = "form-select" })
                @Html.ValidationMessageFor(d => d.Distrito, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Fecha)
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Hora)
                @Html.EditorFor(d => d.Hora, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Hora, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.IdInteresado)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.IdInteresado, "", new { @class = "form-control", @id = "idInteresado", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idInteresado" data-bs-toggle="modal" data-bs-target="#modalBusquedaPersona">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.IdInteresado, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.CondicionInteresado)
                @Html.TextAreaFor(d => d.CondicionInteresado, new { @class = "form-control", onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetras(event)", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.CondicionInteresado, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(d => d.Direccion)
                @Html.TextAreaFor(d => d.Direccion, new { @class = "form-control", onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumerossimbolos(event)", autocomplete = "new-password" })
                @Html.ValidationMessageFor(d => d.Direccion, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-12">
                @Html.LabelFor(d => d.Observaciones)
                @Html.TextAreaFor(d => d.Observaciones, new { @class = "form-control", autocomplete = "new-password", onkeyup = "this.value = this.value.toUpperCase();" })
                @Html.ValidationMessageFor(d => d.Observaciones, null, new { @class = "red" })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group col-md-12">
                <div style="text-align:center;">
                    <a class="btn btn-secondary" href="~/ActaDeObservacionPolicial/Index">Cancelar</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#show">Guardar</a>
                </div>
            </div>
        </div>

        <div class="modal fade" id="show" tabindex="-1" aria-labelledby="showLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="showLabel">Agregar un Acta de Observación Policial</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea guardar una nueva acta?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave" data-bs-dismiss="modal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="modalBusquedaPolicia" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPoliciaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPoliciaLabel">Buscar Policía</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPolicia" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPoliciasBuscar", "ActaDeObservacionPolicial", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaPersona" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPersonaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPersonaLabel">Buscar Persona</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPersona" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPersonasBuscar", "ActaDeObservacionPolicial", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function reply_click(clicked_id) {
        var aux = document.getElementsByName("agregarPolicia")[0].getAttribute("id");
        if (aux === "idActuante") {
            var elem = document.getElementById("idActuante");
        }
        if (aux === "idAcompanante") {
            var elem = document.getElementById("idAcompanante");
        }
        elem.value = clicked_id;
    }

    function reply_click4(clicked_id4) {
        var aux = document.getElementsByName("agregarPersona")[0].getAttribute("id");
        if (aux === "idInteresado") {
            var elem = document.getElementById("idInteresado");
        }
        elem.value = clicked_id4;
    }
</script>
