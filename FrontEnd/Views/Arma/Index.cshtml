@model  List<FrontEnd.Models.ViewModels.ListArmaViewModel>

@{
    ViewBag.Title = "Armas";
}
<div class="container">
    <div class="row mb-3">
        <h2 class="display-4">@ViewBag.Title</h2>
    </div>

    @using (Html.BeginForm("Index", "Arma", FormMethod.Get))
    {

        <div class="row my-4">

            <div class="col-sm-3">
                <select class="form-control" name="filtroSeleccionado" id="filtroSeleccionado">
                    <option selected>Policía Asignado</option>
                    <option>Número de Serie</option>
                </select>
            </div>
            <div class="col-sm-4">
                <input class="form-control" name="busqueda" maxlength="150" type="text" id="busqueda" onkeyup="this.value = this.value.toUpperCase();" onkeypress="return  sololetrasnumeros(event)" />
            </div>
            <div class="col-sm-4">
                <button class="btn btn-primary">Buscar</button>
            </div>
            <div class="col-sm-1">
                <a href="~/Arma/Nuevo" class="btn btn-success">Agregar</a>
            </div>

        </div>
    }


    <div class="row">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Policía Asignado</th>
                    <th scope="col">Número de Serie</th>
                    <th scope="col">Tipo de Arma</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oElemento in Model)
                {
                <tr>
                    <th scope="row">@oElemento.NombrePolicia</th>
                    <td>@oElemento.NumeroSerie</td>
                    <td>@oElemento.TipoArma</td>
                    <td>
                        <a class="btn btn-outline-info" href="~/Arma/Detalle/@oElemento.IdArma">Ver Detalles</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>