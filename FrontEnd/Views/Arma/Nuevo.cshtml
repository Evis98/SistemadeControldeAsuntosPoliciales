@model FrontEnd.Models.ViewModels.ArmaViewModel
@{
    ViewBag.Title = "Agregar arma";
}



<div class="container">
    <div class="row mb-3">
        <h2 class="display-4">@ViewBag.Title</h2>
    </div>

    @using (Html.BeginForm("Nuevo", "Arma", FormMethod.Post))
    {
        <div class="form-group col-md-3">
            @Html.LabelFor(d => d.NumeroSerie)
            @Html.TextBoxFor(d => d.NumeroSerie, "", new { @class = "form-control", @maxlength = "20", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)" })
            @Html.ValidationMessageFor(d => d.NumeroSerie, null, new { @class = "red" })
        </div> 
        @Html.LabelFor(d => d.PoliciaAsignado)
        <div class="row">
            <div class="form-group col-md-3">
                @Html.TextBoxFor(d => d.PoliciaAsignado, "", new { @class = "form-control", @disabled = true })
                @Html.ValidationMessageFor(d => d.NumeroSerie, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-3">
                <a class="btn btn-outline-dark">Buscar</a>
            </div>
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(d => d.TipoArma)
            @Html.DropDownListFor(d => d.TipoArma, Model.TiposArma, new { @class = "myselect form-control" })
        </div>
        @Html.ValidationMessageFor(d => d.TipoArma, null, new { @class = "red" })
        <div class="form-group col-md-3">
            @Html.LabelFor(d => d.Marca)
            @Html.TextBoxFor(d => d.Marca, "", new { @class = "form-control", @maxlength = "20", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)" })
            @Html.ValidationMessageFor(d => d.Marca, null, new { @class = "red" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(d => d.Modelo)
            @Html.TextBoxFor(d => d.Modelo, "", new { @class = "form-control", @maxlength = "20", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)" })
            @Html.ValidationMessageFor(d => d.Modelo, null, new { @class = "red" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(d => d.Calibre)
            @Html.DropDownListFor(d => d.Calibre, new List<SelectListItem> {
                            new SelectListItem{ Value = "1", Text = "9mm"},
                            new SelectListItem{ Value = "2", Text = "12(18,56mm)"},
                            new SelectListItem{ Value = "3", Text = "5,6mm"}
                          },
                            new { @class = "myselect form-control" })
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(d => d.Condicion)
            @Html.DropDownListFor(d => d.Condicion, new List<SelectListItem> {
                            new SelectListItem{ Value = "1", Text = "Buena"},
                            new SelectListItem{ Value = "2", Text = "Regular"},
                            new SelectListItem{ Value = "3", Text = "Mala"}
                          },
                            new { @class = "myselect form-control" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(d => d.Ubicacion)
            @Html.DropDownListFor(d => d.Ubicacion, new List<SelectListItem> {
                            new SelectListItem{ Value = "1", Text = "Edifico de Policía Municipal"},
                            new SelectListItem{ Value = "2", Text = "Mercado"},
                          },
                            new { @class = "myselect form-control" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(d => d.Observacion)
            @Html.TextAreaFor(d => d.Observacion, new { @class = "form-control", @maxlength = "20", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)" })
            @Html.ValidationMessageFor(d => d.Observacion, null, new { @class = "red" })
        </div>
        <div class="modal" id="show" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Crear un Arma</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea guardar una nueva arma?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="Save">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <div style="text-align:right;">
                    <input value="Guardar" class="btn btn-primary" type="button" id="hGuardar" data-toggle="modal" data-target="#show" />
                </div>
            </div>
        </div>}


</div>
            