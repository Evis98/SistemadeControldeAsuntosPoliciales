@model FrontEnd.Models.ViewModels.PoliciaViewModel
@{ ViewBag.Title = "Agregar Información de Policí­a"; }



<div class="container">
    <div class="row mb-3">
        <h2 class="display-4">@ViewBag.Title</h2>
    </div>

    @using (Html.BeginForm("Nuevo", "Policia", FormMethod.Post))
    {
<div class="container">

    <div class="form-group col-md-4">
        @Html.LabelFor(d => d.TipoCedula)
        @Html.DropDownListFor(d => d.TipoCedula, Model.TiposCedula, new { @class = "myselect form-control" })
       @Html.ValidationMessageFor(d => d.TipoCedula, null, new { @class = "red" })
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(d => d.Cedula)
        @Html.TextBoxFor(d => d.Cedula, "", new { @class = "form-control", @id = "pcedula", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumeros(event)" })
        @if (Model.CedulaPoliciaFiltrada != null)
        {@Html.ValidationMessageFor(d => d.Cedula, "La cedula ya existe", new { @class = "red" })}
    </div>
    <div class="form-group col-md-8">
        @Html.ValidationMessageFor(d => d.Cedula, null, new { @class = "red" })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(d => d.Nombre)
        @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control", @id = "TNombre", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetras(event)" })
        @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red" })
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(d => d.FechaNacimiento)
        @Html.EditorFor(d => d.FechaNacimiento, "", new { @class = "form-control" })
    </div>
    <div class="form-group col-md-8">
            @Html.ValidationMessageFor(d => d.FechaNacimiento, null, new { @class = "red" })

        </div>
        <div class="form-group col-md-3">

            @Html.LabelFor(d => d.TelefonoCelular)
            @Html.TextBoxFor(d => d.TelefonoCelular, "", new { @class = "inputphone form-control" })

        </div>
        <div class="form-group col-md-8">
            @Html.ValidationMessageFor(d => d.TelefonoCelular, null, new { @class = "red" })

        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(d => d.TelefonoCasa)
            @Html.TextBoxFor(d => d.TelefonoCasa, "", new { @class = "inputphone form-control" })


        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(d => d.Direccion)
            @Html.TextAreaFor(d => d.Direccion, new { @class = "form-control", @onkeyup = "this.value = this.value.toUpperCase();", @onkeypress = "return sololetrasnumerossimbolos(event)" })
            @Html.ValidationMessageFor(d => d.Direccion, null, new { @class = "red" })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(d => d.CorreoElectronico)
            @Html.TextBoxFor(d => d.CorreoElectronico, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.CorreoElectronico, null, new { @class = "red" })
        </div>

        <div class="form-group col-md-6">

            @Html.LabelFor(d => d.ContactoEmergencia)
            @Html.TextBoxFor(d => d.ContactoEmergencia, "", new { @class = "form-control", @id = "TContacto", @onkeypress = "return sololetras(event)" })
            @Html.ValidationMessageFor(d => d.ContactoEmergencia, null, new { @class = "red" })
        </div>
        <div class="form-group col-md-8">
            @Html.LabelFor(d => d.TelefonoEmergencia)

        </div>
        <div class="form-group col-md-3">

            @Html.TextBoxFor(d => d.TelefonoEmergencia, "", new { @class = "inputphone form-control" })

        </div>
        <div class="form-group col-md-6">
            @Html.ValidationMessageFor(d => d.TelefonoEmergencia, null, new { @class = "red" })

        </div>
        <div class="modal" id="show" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Crear Policía</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea guardar un nuevo policía?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <div style="text-align:right;">
                    <input value="Guardar" class="btn btn-primary" type="button" id="hGuardar" data-toggle="modal" data-target="#show" />
                    <script>
                        $('#btnSave').click(function () {
                            $('#show').modal('hide');
                        });

                    </script>
                </div>
            </div>
        </div>
    </div>}


</div>


