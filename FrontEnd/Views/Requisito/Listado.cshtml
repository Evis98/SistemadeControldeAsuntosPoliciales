@model List<FrontEnd.Models.ViewModels.RequisitoViewModel>


@{
    ViewBag.Title = "Listado de Requisitos";
    List<SelectListItem> items1 = (List<SelectListItem>)ViewBag.items1;
    List<SelectListItem> items2 = (List<SelectListItem>)ViewBag.items2;
}

<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; margin-bottom: 20px; word-wrap: break-word;">
    <div class="row">
        <div class="col-md-12">
            <div style="text-align:center;">
                <h3 class="display-4">@ViewBag.Title </h3>
            </div>
            <hr />
        </div>
    </div>
    @using (Html.BeginForm("Listado", "Requisito", FormMethod.Get))
    {
        <div class="row">
            <div class="col mb-3">
                <h1 class="h2">@HttpContext.Current.Session["nombrePolicia"].ToString()</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.DropDownList("filtrosSeleccionado", items1, new { @class = "form-control", @id = "filtroSeleccionado", @name = "filtroSeleccionado", @onclick = "ocultarRequisito()" })
                <script>
                    document.getElementById("filtroSeleccionado").value = "Detalle de Requisito";
                </script>
            </div>
            <div class="col-sm-4">
                <input class="form-control" name="busqueda" type="text" id="busqueda" onkeyup="this.value = this.value.toUpperCase();" onkeypress="return sololetrasnumerossimbolos(event)" />
                @Html.DropDownList("tiposRequisito", items2, new { @class = "form-control", @id = "tipoRequisito", @name = "tipoRequisito", @style = "display:none" })
              
            </div>
            <div class="col-sm-3">
                <button class="btn btn-primary">Buscar</button>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-success" href="~/Requisito/Nuevo/@HttpContext.Current.Session["idPolicia"].ToString()">Agregar Requisito</a>
            </div>
        </div>
    <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered center table-sm">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col"> Tipo Requisito</th>
                                <th scope="col"> Descripción</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var oElemento in Model.Take(10))
                            {
                                <tr>
                                    <th scope="row">@oElemento.VistaTipoRequisito</th>
                                    <td>@oElemento.Detalles</td>
                                    <td>
                                        <div style="text-align:center;">
                                            <a class="btn btn-sm btn-outline-info" href="~/Requisito/Detalle/@oElemento.IdRequisito">Ver Detalles</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
