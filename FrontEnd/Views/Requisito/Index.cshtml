@model List<FrontEnd.Models.ViewModels.ListRequisitoViewModel>


@{
    ViewBag.Title = "Listado de Requisitos";
}

<div class="container">
    <div class="row mb-3">

        <h2 class="display-4">@ViewBag.Title</h2>

    </div>
    
    <div class="text-right">
      
            <a class="btn btn-success" href="~/Requisito/Agregar/@HttpContext.Current.Session["idPolicia"].ToString()">Agregar Requisito</a>

        </div>

        <div class="row my-4">

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"> Tipo Requisito</th>
                        <th scope="col"> Descripcion</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var oElemento in Model)
                    {
                        <tr>
                            <th scope="row">@oElemento.IdRequisito</th>
                            <td>@oElemento.TipoRequisito</td>
                            <td>@oElemento.Detalles</td>
                            <td>
                                <a class="btn btn-outline-info" href="~/Requisito/Detalle/@oElemento.IdRequisito">Ver Detalles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
