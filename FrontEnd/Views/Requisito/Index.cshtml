@model List<FrontEnd.Models.ViewModels.ListRequisitoViewModel>


@{
    ViewBag.Title = "Listado de Requisitos";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align:right;">
    <a class="btn btn-default" href="~/Requisito/Agregar/@HttpContext.Current.Session["idPolicia"].ToString()">Agregar Requisito</a>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Tipo Requisito</th>
                <th>Descripcion</th>
                <th></th>
                <th></th>

            </tr>


            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.TipoRequisito</td>
                    <td>@oElemento.detalles</td>
                    <td>
                        <a class="btn btn-default">Ver Detalles</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
