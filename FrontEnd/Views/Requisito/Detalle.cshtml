@model FrontEnd.Models.ViewModels.RequisitoViewModel

@{
    ViewBag.Title = "Requisito";
}

<div class="row mb-3">
    <h2 class="display-4">
        @Html.LabelFor(d => d.Nombre)
        @Html.DisplayTextFor(d => d.Nombre)
    </h2>
</div>

@using (Html.BeginForm("Mostrar", "Requisito", FormMethod.Post))
{

<dl class=" row">

    <dt class="col-sm-4">
        @Html.LabelFor(d => d.TipoRequisito)
    </dt>
    <dd id="req" class="col-sm-8">

        <script>
                function RequsitoText(e) {
                    var str = "";
                    if (e == 5) {
                        str = "Carné";
                    }
                    else if (e == 6) {
                        str = "Capacitación";
                    }
                    //document.getElementById('req').innerHTML = str;
                    return str;
                }

            document.write(RequsitoText(@Model.TipoRequisito))
        </script>

    </dd>

    <dt class="col-sm-4">
        @Html.LabelFor(d => d.Detalles)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayTextFor(d => d.Detalles)
    </dd>

    <dt class="col-sm-4">
        @Html.LabelFor(d => d.Fecha_Vencimiento)
    </dt>
    <dd class="col-sm-8">
        <text>@(Model.Fecha_Vencimiento.ToShortDateString())</text>
    </dd>
    @if (Model.Imagen != "N/A") { 
        <dt class="col-sm-4">
            @Html.Label("Archivo: ")
        </dt>
    <dd class="col-sm-8">
        <u style="color:blue">
            <text style="color:blue">@Url.Content(Model.Detalles)</text><text style="color:blue">.pdf</text>
        </u>
    </dd>
    }
</dl>

    <div class="row" style="text-align:right;">
        <a href="~/Requisito/Index/@Model.IdPolicia" class="btn btn-outline-secondary">Regresar</a>
    </div>
    <div class="modal" id="show4" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar Requisito</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar un requisito?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" id="Cancel" data-dismiss="modal">Cancelar</button>
                    <a href="~/Requisito/Eliminar/@Model.IdRequisito" type="submit" class="btn btn-danger"  id="Save">Eliminar</a>
                </div>
            </div>
        </div>
    </div>



    <div style="text-align:center;">
        <a class="btn btn-primary" href="~/Requisito/Editar/@Model.IdRequisito">Editar</a>
        @if (Model.Imagen != "N/A")
        {<a class="btn btn-info" href="@Url.Content(Model.Imagen)" download="@Url.Content(Model.Detalles)">Descargar Archivo Adjunto</a>
        } <a value="Eliminar" class="btn btn-danger" href="~/Requisito/Eliminar/@Model.IdRequisito" type="button" data-toggle="modal" data-target="#show4">Eliminar</a>


        </div>


}