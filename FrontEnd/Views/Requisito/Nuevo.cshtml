
@model FrontEnd.Models.ViewModels.RequisitoViewModel
@{
    ViewBag.Title = "Agregar Información del Requisito";
}
<style>
    td {
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>
<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div style="text-align:center;">
        <h1 class="display-5">@ViewBag.Title</h1>
    </div>
    <hr />
    @using (Html.BeginForm("Nuevo", "Requisito", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col mb-3">
                <h1 class="h2">@Html.DisplayTextFor(d => d.NombrePolicia)</h1>
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-2 position-relative">
                @Html.LabelFor(d => d.TipoRequisito)
                @Html.DropDownListFor(d => d.TipoRequisito, Model.TiposRequisito, "--Seleccione--", new { @class = "form-select", @id = "tiposRequisito", @onchange = "ocultarFecha()" })
                @Html.ValidationMessageFor(d => d.TipoRequisito, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4" id="fechaVencimiento" style="display:none;">
            <div class="form-group col-md-2 position-relative">
                @Html.LabelFor(d => d.FechaVencimiento)
                @Html.EditorFor(d => d.FechaVencimiento, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.FechaVencimiento, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-12 position-relative">
                @Html.LabelFor(d => d.Detalles)
                @Html.TextAreaFor(d => d.Detalles, new { @class = "form-control", @id = "textoDetalle", @maxlength = "250", @style = "text-transform:uppercase"  , @onkeydown = "return /[a-zA-Z ÁÉÍÓÚÑáéíóúñ123654789-]/i.test(event.key)" @*, @onkeydown = "return (event.keyCode!=13);"*@ })
                @Html.ValidationMessageFor(d => d.Detalles, null, new { @class = "red" })
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group col-md-3 position-relative">
                @Html.LabelFor(d => d.Archivo)
                @Html.TextBoxFor(d => d.Archivo, new { @type = "file", @id = "uploadField", accept = ".pdf", @onchange = "validaTamano(this)" })
                <p class="red" id="errorArchivo" style="display:none;">El archivo es muy grande.</p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <a href="~/Requisito/Listado/@Session["idPolicia"]" class="btn btn-outline-secondary">Regresar</a>
                <div style="text-align:center;">
                    <a class="btn btn-secondary" href="~/Requisito/Index">Cancelar</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#show">Guardar</a>
                </div>
            </div>
        </div>
        <div class="modal fade" id="show" tabindex="-1" aria-labelledby="showLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="showLabel">Agregar un Requisito</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea agregar un nuevo requisito?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave" data-bs-dismiss="modal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<script>
    function ocultarFecha() {
        var aux2 = document.getElementById("tiposRequisito");
        var aux3 = document.getElementById("fechaVencimiento");
        if (aux2.selectedOptions[0].innerHTML === "Carné") {
            aux3.style.display = "block"
        } else {
            aux3.style.display = "none"
        }
    }

    function validaTamano(j) {
        var input = $('#errorArchivo');
        if (j.files[0].size > 4194304) {
            input.css('display', 'block');
            j.value = "";
        } else {
            input.css('display', 'none');
        }
    }


        $('#textoDetalle').keypress(function (event) {
        if (event.keyCode == 13) {
            event.preventDefault();
        }
    });


</script>