@model List<FrontEnd.Models.ViewModels.AuditoriaViewModel>


@{
    ViewBag.Title = "Listado de Auditorías";

}

<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; margin-bottom: 20px; word-wrap: break-word;">

    <div style="text-align:center;">
        <h1 class="display-5">@ViewBag.Title </h1>
    </div>
    <hr />

    @using (Html.BeginForm("ListadoAuditoria", "Auditoria", FormMethod.Get))
    {
        <div class="row">
            <div class="col mb-3">
                <h1 class="h2">@Session["tabla"] : @HttpContext.Current.Session["auditoria"].ToString()</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <select class="form-select" name="filtrosSeleccionado" id="filtrosSeleccionado" onclick="ocultarFechaAuditoriaPolicia()">
                    <option value="0" selected="selected">--Seleccione--</option>
                    <option value="Acción">Acción</option>
                    <option value="Fecha">Fecha</option>
                </select>
            </div>
            <div class="col-sm-4">
                <select class="form-select" name="tiposAccion" id="tiposAccion">
                    <option value="0" selected="selected">--Seleccione--</option>
                    <option value="Agregar">Agregar</option>
                    <option value="Editar">Editar</option>
                    <option value="Modificar estado">Modificar estado</option>
                    <option value="Completar">Completar</option>
                </select>
                <input class="form-control" name="busquedaFechaInicioP" type="date" id="busquedaFechaInicioP" style="display:none" />
                <label id="textFechaInicioP" style="display:none">Fecha de inicio</label>
            </div>
            <div class="col-sm-3">
                <input class="form-control" name="busquedaFechaFinalP" type="date" id="busquedaFechaFinalP" style="display:none" />
                <label id="textFechaFinalP" style="display:none">Fecha final</label>
                <span id="errorFechaH"></span>
            </div>

            <div class="col-sm-1">
                <button class="btn btn-primary">Buscar</button>
            </div>

        </div>
    }
    <hr />

    <table class="table table-bordered center table-sm" id="idtablaPolicia">
        <thead class="table-dark">
            <tr>
                <th scope="col"> Usuario</th>
                <th scope="col"> Acción</th>
                <th scope="col"> Fecha</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <th scope="row">@oElemento.VistaUsuario</th>
                    <td>@oElemento.VistaAccion</td>
                    <td>@oElemento.Fecha</td>

                </tr>
            }
        </tbody>
    </table>



</div>

<script>
    $(document).ready(function () {
        $('#idtablaPolicia').DataTable({
            searching: false,
            lengthMenu: [[6], [6]],
            lengthChange: false,
            language: {
                lengthMenu: "Mostrar _MENU_ entradas",
                info: "Se muestran de _START_ a _END_ de _TOTAL_ entradas totales",
                infoEmpty: "Se muestran de 0 a 0 de 0 entradas totales",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }

        });
    });


</script>














