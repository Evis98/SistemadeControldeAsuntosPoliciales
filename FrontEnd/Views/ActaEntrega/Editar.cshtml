@model FrontEnd.Models.ViewModels.ActaEntregaViewModel
@{ ViewBag.Title = "Editar Acta de Entrega"; }

<div class="container bg-light text-dark border" style=" height: auto; min-height: 80vh; padding-bottom: 20px; margin-bottom: 28px; word-wrap: break-word;">
    <div style="text-align:center;">
        <h1 class="display-5">@ViewBag.Title</h1>
    </div>
    <hr />
    @using (Html.BeginForm("Editar", "ActaEntrega", FormMethod.Post))
    {
        @Html.HiddenFor(d => d.IdActaEntrega)
        @Html.HiddenFor(d => d.NumeroFolio)

        <div class="row mb-4">
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.TipoActa)
                @Html.DropDownListFor(d => d.TipoActa, Model.TiposActa, "--Seleccione--", new { @class = "form-select", @id = "tipoActaSeleccionado", @onclick = "ocultarActa()" })
                @Html.ValidationMessageFor(d => d.TipoActa, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4" style="display:none;" id="consecutivoActaHallazgo">
                @Html.LabelFor(d => d.ConsecutivoActaHallazgo)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.ConsecutivoActaHallazgo, "", new { @class = "form-control", @id = "consecutivoActa", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="consecutivoActa" data-bs-toggle="modal" data-bs-target="#modalBusquedaHallazgo">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.ConsecutivoActaHallazgo, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4" style="display:none;" id="consecutivoActaDecomiso">
                @Html.LabelFor(d => d.ConsecutivoActaDecomiso)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.ConsecutivoActaDecomiso, "", new { @class = "form-control", @id = "consecutivoActa2", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="consecutivoActa" data-bs-toggle="modal" data-bs-target="#modalBusquedaDecomiso">Buscar</a>

                </div>
                @Html.ValidationMessageFor(d => d.ConsecutivoActaDecomiso, null, new { @class = "red" })
            </div>

            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.TipoTestigo)
                @Html.DropDownListFor(d => d.TipoTestigo, Model.TiposTestigo, "--Seleccione--", new { @class = "form-select", @id = "tipoTestigoSeleccionado", @onclick = "ocultarTestigo()" })
                @Html.ValidationMessageFor(d => d.TipoTestigo, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4" style="display:none;" id="idTestigoPolicia">
                @Html.LabelFor(d => d.TestigoPolicia)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.TestigoPolicia, "", new { @class = "form-control", @id = "cedulatestigo1", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idTestigo" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.TestigoPolicia, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4" style="display:none;" id="idTestigoPersona">
                @Html.LabelFor(d => d.TestigoPersona)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.TestigoPersona, "", new { @class = "form-control", @id = "cedulatestigo2", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idPersona" data-bs-toggle="modal" data-bs-target="#modalBusquedaPersona">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.TestigoPersona, null, new { @class = "red" })
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.RazonSocial)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.RazonSocial, "", new { @class = "form-control", @id = "idRazonSocial", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idRazonSocial" data-bs-toggle="modal" data-bs-target="#modalBusquedaPersonaJuridica">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.RazonSocial, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Recibe)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.Recibe, "", new { @class = "form-control", @id = "idRecibe", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idRecibe" data-bs-toggle="modal" data-bs-target="#modalBusquedaPersona">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.Recibe, null, new { @class = "red" })
            </div>

            @if (Session["Rol"].ToString() == "1" || Session["Rol"].ToString() == "2" || Session["Rol"].ToString() == "3")
            {
                <div class="form-group col-md-3">
                    @Html.LabelFor(d => d.Encargado)
                    <div class="input-group">
                        @Html.TextBoxFor(d => d.Encargado, "", new { @class = "form-control", @Value = @Session["cedula"].ToString(), @id = "idEncargado", @readonly = "readonly" })
                        <a class="btn btn-primary" data-book-id="idEncargado" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                    </div>
                    @Html.ValidationMessageFor(d => d.Encargado, null, new { @class = "red" })
                </div>

            }
            else
            {
                <div class="form-group col-md-3">
                    @Html.LabelFor(d => d.Encargado)
                    <div class="input-group">
                        @Html.TextBoxFor(d => d.Encargado, "", new { @class = "form-control", @id = "idEncargado", @readonly = "readonly" })
                        <a class="btn btn-primary" data-book-id="idEncargado" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                    </div>
                    @Html.ValidationMessageFor(d => d.Encargado, null, new { @class = "red" })
                </div>
            }

        </div>

        <div class="row mb-4">
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Supervisor)
                <div class="input-group">
                    @Html.TextBoxFor(d => d.Supervisor, "", new { @class = "form-control", @id = "idSupervisor", @readonly = "readonly" })
                    <a class="btn btn-primary" data-book-id="idSupervisor" data-bs-toggle="modal" data-bs-target="#modalBusquedaPolicia">Buscar</a>
                </div>
                @Html.ValidationMessageFor(d => d.Supervisor, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Fecha)
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(d => d.Hora)
                @Html.EditorFor(d => d.Hora, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Hora, null, new { @class = "red" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(d => d.Estado)
                @Html.DropDownListFor(d => d.Estado, Model.Estados, new { @class = "form-select" })
                @Html.ValidationMessageFor(d => d.Estado, null, new { @class = "red" })
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-12">
                @Html.LabelFor(d => d.InventarioEntregado)
                @Html.TextAreaFor(d => d.InventarioEntregado, new { @class = "form-control", @readonly = "readonly", @id = "inventario" })
                @Html.ValidationMessageFor(d => d.InventarioEntregado, null, new { @class = "red" })
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="form-group col-md-12">
                <div style="text-align:center;">
                    <a class="btn btn-secondary" href="~/ActaEntrega/Index">Cancelar</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#show">Guardar</a>
                </div>

            </div>
        </div>

        <div class="modal fade" id="show" tabindex="-1" aria-labelledby="showLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="showLabel">Editar una Acta de Entrega</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                    </div>
                    <div class="modal-body">
                        <p>¿Está seguro que desea editar el Acta de Entrega?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" id="Cancel" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="btnSave" data-bs-dismiss="modal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>

    }

    <div class="modal fade" id="modalBusquedaPolicia" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPoliciaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPoliciaLabel">Buscar Policía</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPolicia" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPoliciasBuscar", "ActaEntrega", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaPersona" tabindex="-1" role="dialog" aria-labelledby="modalBusquedaPersonaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalBusquedaPersonaLabel">Buscar Persona</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPersona" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPersonasBuscar", "ActaEntrega", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaPersonaJuridica" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar Persona Jurídica</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarPersonaJuridica" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaPersonasJuridicasBuscar", "ActaEntrega", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaHallazgo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar Acta de Hallazgo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarHallazgo" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaHallazgosBuscar", "ActaEntrega", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalBusquedaDecomiso" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar Acta de Hallazgo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" />
                </div>
                <p hidden name="agregarDecomiso" id="" />
                <div class="modal-body">
                    @{ Html.RenderAction("ListaDecomisosBuscar", "ActaEntrega", new { nombre = "" }); }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        ocultarActa();
        ocultarTestigo();
    });

    function reply_click(clicked_id) {
        var aux = document.getElementsByName("agregarPolicia")[0].getAttribute("id");
        if (aux === "idTestigo") {
            var elem = document.getElementById("cedulatestigo1");
        }
        if (aux === "idEncargado") {
            var elem = document.getElementById("idEncargado");
        }
        if (aux === "idSupervisor") {
            var elem = document.getElementById("idSupervisor");
        }
        elem.value = clicked_id;
        $('#modalBusqueda').modal('hide');
    }
    function reply_click2(clicked_id, inventarioLista) {

        var elem = document.getElementById("consecutivoActa");
        elem.value = clicked_id;
        var elem = document.getElementById("consecutivoActa2");
        elem.value = "";
        var elem2 = document.getElementById("inventario");
        elem2.value = inventarioLista;
    }
    function reply_click3(clicked_id, inventarioLista) {

        var elem = document.getElementById("consecutivoActa2");
        elem.value = clicked_id;
        var elem = document.getElementById("consecutivoActa");
        elem.value = "";
        var elem2 = document.getElementById("inventario");
        elem2.value = inventarioLista;
    }
    function reply_click4(clicked_id4) {
        var aux = document.getElementsByName("agregarPersona")[0].getAttribute("id");
        if (aux === "idRecibe") {
            var elem = document.getElementById("idRecibe");
        }
        if (aux === "idRazonSocial") {
            var elem = document.getElementById("idRazonSocial");
        }
        if (aux === "idPersona") {
            var elem = document.getElementById("cedulatestigo2");
        }
        elem.value = clicked_id4;
    }
    function reply_click5(clicked_id5) {
        var elem = document.getElementById("idRazonSocial");
        elem.value = clicked_id5;
        $('#modalBusquedaPersonaJuridica').modal('hide');
    }
    function ocultarActa() {

        var aux1 = document.getElementById("consecutivoActaHallazgo");
        var aux2 = document.getElementById("tipoActaSeleccionado");
        var aux3 = document.getElementById("consecutivoActaDecomiso");
        if (aux2.options[aux2.selectedIndex].innerText === "Hallazgo") {
            aux1.style.display = "block";
            var elem = document.getElementById("consecutivoActa2");
            elem.value = "";
            aux3.style.display = "none";
            /*var elem = document.getElementById("inventario");
            elem.value = "";*/

        }
        if (aux2.options[aux2.selectedIndex].innerText === "Decomiso") {
            var elem = document.getElementById("consecutivoActa");
            elem.value = "";
            aux1.style.display = "none";
            aux3.style.display = "block";
            /*var elem = document.getElementById("inventario");
            elem.value = "";*/

        }
        if (aux2.options[aux2.selectedIndex].innerText === "--Seleccione--") {
            aux1.style.display = "none";
            var elem = document.getElementById("consecutivoActa2");
            elem.value = "";
            aux3.style.display = "none"
            var elem = document.getElementById("consecutivoActa");
            elem.value = "";
           /* var elem = document.getElementById("inventario");
            elem.value = "";*/
        }
    }

    function ocultarTestigo() {

        var aux1 = document.getElementById("idTestigoPolicia");
        var aux2 = document.getElementById("tipoTestigoSeleccionado");
        var aux3 = document.getElementById("idTestigoPersona");
        if (aux2.options[aux2.selectedIndex].innerText === "Policía") {
            aux1.style.display = "block";
            var elem = document.getElementById("cedulatestigo2");
            elem.value = "";
            aux3.style.display = "none";

        }
        if (aux2.options[aux2.selectedIndex].innerText === "Persona") {
            var elem = document.getElementById("cedulatestigo1");
            elem.value = "";
            aux1.style.display = "none";
            aux3.style.display = "block";
        }
        if (aux2.options[aux2.selectedIndex].innerText === "--Seleccione--") {
            aux1.style.display = "none";
            var elem = document.getElementById("cedulatestigo2");
            elem.value = "";
            aux3.style.display = "none"
            var elem = document.getElementById("cedulatestigo1");
            elem.value = "";
        }
        if (aux2.options[aux2.selectedIndex].innerText === "No Aplica") {
            aux1.style.display = "none";
            var elem = document.getElementById("consecutivoActa2");
            elem.value = "";
            aux3.style.display = "none"
            var elem = document.getElementById("consecutivoActa");
            elem.value = "";

        }
    }
</script>
