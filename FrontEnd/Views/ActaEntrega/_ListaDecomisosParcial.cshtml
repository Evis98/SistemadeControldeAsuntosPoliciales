@model List<FrontEnd.Models.ViewModels.ActaDecomisoViewModel>

<table class="table table-sm table-bordered" id="idtablaDecomiso">

    <thead class="table-light">
        <tr>
            <th scope="col">Numero Folio</th>
            <th scope="col">Nombre Policia Encargado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.NumeroFolio)</th>
                <td>
                    <label><a href="#" onclick="reply_click3(this.id, '@item.Inventario')" id="@item.NumeroFolio" data-bs-dismiss="modal"> @item.VistaOficialActuante</a></label>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#idtablaDecomiso').DataTable({
            searching: false,
            lengthMenu: [[10], [10]],
            lengthChange: false,
            language: {
                lengthMenu: "Mostrar _MENU_ entradas",
                info: "Se muestran de _START_ a _END_ de _TOTAL_ entradas totales",
                infoEmpty: "Se muestran de 0 a 0 de 0 entradas totales",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }

        });
    });


</script>