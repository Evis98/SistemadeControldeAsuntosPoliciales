@model List<FrontEnd.Models.ViewModels.PoliciaViewModel>

<table class="table table-sm table-bordered" id="idtablaPolicia">
    <thead class="table-light">
        <tr>
            <th scope="col">Cédula</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.Cedula)</th>
                <td>
                    <label><a href="#" onclick="reply_click(this.id)" id="@item.Cedula" data-bs-dismiss="modal"> @item.Nombre</a></label>
                </td>
            </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#idtablaPolicia').DataTable({
            searching: false,
            lengthMenu: [[10], [10]],
            lengthChange: false,
            language: {
                lengthMenu: "Mostrar _MENU_ entradas",
                info: "Se muestran de _START_ a _END_ de _TOTAL_ entradas totales",
                infoEmpty: "Se muestran de 0 a 0 de 0 entradas totales",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }

        });
    });


</script>
