@model List<FrontEnd.Models.ViewModels.ArmaViewModel>

<table class="table table-sm table-bordered" id="idTablaArma">
    <thead class="table-light">
        <tr>
            <th scope="col">Numero de Serie</th>
            <th scope="col">Tipo de Arma</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.NumeroSerie)</th>
                <td>
                    <label><a href="#" onclick="reply_clickArma(this.id ,'@item.VistaEstadoArma')" id="@item.NumeroSerie" data-bs-dismiss="modal"> @item.VistaTipoArma</a></label>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#idTablaArma').DataTable({
            searching: false,
            lengthMenu: [[6], [6]],
            lengthChange: false,
            language: {
                lengthMenu: "Mostrar _MENU_ entradas",
                info: "Se muestran de _START_ a _END_ de _TOTAL_ entradas totales",
                infoEmpty: "Se muestran de 0 a 0 de 0 entradas totales",
                paginate: {
                    first: "Primero",
                    last: "Último",
                    next: "Siguiente",
                    previous: "Anterior"
                }
            }

        });
    });


</script>
