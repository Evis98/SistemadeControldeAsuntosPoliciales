@model List<SistemadeControldeAsuntosPoliciales.Models.ViewModels.ListPoliciaViewModel>

@{
    ViewBag.Title = "Policias";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th></th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Cedula</td>
                    <td>@oElemento.Nombre</td>
                    <td>
                        <a class="btn btn-default" href="~/Tabla/Editar/@oElemento.IdPolicia">Editar</a>
                        <a class="btn btn-danger" href="~/Tabla/Eliminar/@oElemento.IdPolicia">Eliminar</a>
                    </td>
                </tr>
       }
        </table>
    </div>
</div>